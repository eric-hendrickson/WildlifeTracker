<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table id="animal_list">
  <thead>
    <tr>
      <th>Common name</th>
      <th>Latin name</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.common_name %></td>
        <td><%= animal.latin_name %></td>
        <td><%= animal.kingdom %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <label><strong>New Animal:</strong></label>
  <br>
  <input type="text" name="animal[common_name]" id="common_name" placeholder="Common Name"/>
  <br>
  <input type="text" name="animal[latin_name]" id="latin_name" placeholder="Latin Name"/>
  <br>
  <input type="text" name="animal[kingdom]" id="kingdom" placeholder="Kingdom"/>
  <br>
  <button id="new_animal">Add Animal</button>
</div>
